<div class="wrapper container-fluid">
    <section class="partenaires row text-center" style="margin: auto">
        {{#each partenaires}}
        <div class="partenaire col-12 col-md-6">
          <div class="card">
            <img class="img-fluid" src={{this.logo}} width="150" height="150" alt="Generic placeholder thumbnail" style="margin: auto">
            <div class="card-body">
              {{#if this.id}}
                <h4 class="card-title">{{this.id}}</h4>
              {{/if}}
              <p class="card-text">{{this.description}}</p>
              <a href={{this.link}} class="btn btn-dark" target="_blank">Informations</a>
            </div>
          </div>
        </div>
        {{/each}}
    </section>
</div>
