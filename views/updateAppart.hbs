{{#if message}}
    <div  id="alertScore" class="alert alert-success alert-dismissible fade show" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
      </button>
      {{message}}
    </div>
{{/if}}
<div >
    <h3>Connecté en tant que {{Colloc}}</h3>
    <p id='resume'></p>
    <form class="oxy col-6 col-sm-3 text-center container-fluid" action="/updateAppartMo" method="post">
        <h3>Statut de la colloc</h3>
        <h5>Ouverte</h5><img src='images/Statut1.png' height="42" width="38"><input id='statut1' type ='radio' name='statut' value='1'>
        <h5>Beaucoup de monde</h5><img src='images/Statut2.png' height="42" width="38"><input id='statut2' type ='radio' name='statut' value='2'>
        <h5>Fermée</h5><img src='images/Statut3.png' height="42" width="38"><input id='statut3' type ='radio' name='statut' value='3'>
        <h5>Stacks en cours. Need beer</h5><img src='images/kro.png' height="42" width="42"><input id='statut4' type ='radio' name='statut' value='4'>
        <h5>Fermer définitivement (disparaitre de la carte)</h5><input id='statut5' type ='radio' name='statut' value='5'>
        <h3>Horaires</h3>
        <input id='horaires' type ='text' name ="horaires"></br>
        <input name="colloc" type="hidden" value="{{Colloc}}">
        <input name="submit" type="submit" value="Sauvegarder">
    </form>
</div>
<script>
var data = '{{{infos}}}';
var infos = JSON.parse(data);
horaires = document.getElementById('horaires');
resume = document.getElementById('resume');
resume.innerHTML = infos["Colloc"]+"</br>Hotes :"+infos["Habitants"]+"</br>Adresse :"+infos["Adresse"]+"</br>"+infos["Divers"]
horaires.value = infos["Horaires"];
var statut = infos["Statut"];
if (statut ==1){
document.getElementById('statut1').checked = true;
}
if (statut ==2){
document.getElementById('statut2').checked = true;
}
if (statut ==3){
document.getElementById('statut3').checked = true;
}
if (statut ==4){
document.getElementById('statut4').checked = true;
}
if (statut ==5){
document.getElementById('statut5').checked = true;
}
</script>
